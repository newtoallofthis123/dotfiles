// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "project_panel": {
    "dock": "right"
  },
  "show_inline_completions": true,
  "assistant": {
    "dock": "left",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "on_yank",
    "use_smartcase_find": true,
    "use_multiline_find": true
  },
  "ui_font_size": 20,
  "ui_font_family": "Inter 18pt",
  "buffer_font_size": 20.0,
  "buffer_font_family": "Hurmit Nerd Font",
  // "ui_font_weight": 500,
  "theme": {
    "mode": "system",
    "light": "Github Light",
    "dark": "Zedokai Darker (Filter Spectrum)"
  },
  "terminal": {
    "shell": {
      "program": "fish"
    },
    "font_family": "Hurmit Nerd Font"
  },
  "base_keymap": "VSCode",
  "load_direnv": "shell_hook",
  "inline_completions": {
    "disabled_globs": [".env"]
  },
  "cursor_blink": false,
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history"
  },
  "languages": {
    "C++": {
      "ensure_final_newline_on_save": false,
      "format_on_save": "language_server"
    },
    "PHP": {
      "ensure_final_newline_on_save": false,
      "format_on_save": "language_server"
    },
    "Python": {
      "language_servers": ["ruff", "pyright"]
    },
    "Proto": {
      "language_servers": ["/home/noobscience/go/bin/protobuf-language-server"],
      "formatter": {
        "external": {
          "command": "/home/noobscience/.local/share/nvim/mason/bin/clang-format",
          "arguments": ["{buffer_path}"]
        }
      }
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "openFilesOnly",
          "typeCheckingMode": "off"
        }
      }
    }
  }
}
