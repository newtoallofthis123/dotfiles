# Keybindings
keybind = ctrl+shift+l=new_split:right 
keybind = ctrl+shift+h=new_split:left 
keybind = ctrl+shift+k=new_split:up
keybind = ctrl+shift+j=new_split:down 

keybind = alt+l=goto_split:right
keybind = alt+h=goto_split:left
keybind = alt+k=goto_split:top
keybind = alt+j=goto_split:bottom
keybind = alt+right=goto_split:right
keybind = alt+left=goto_split:left
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom
keybind = alt+right_bracket=goto_split:next
keybind = alt+left_bracket=goto_split:previous

keybind = ctrl+alt+right=resize_split:right,10
keybind = ctrl+alt+left=resize_split:left,10
keybind = ctrl+alt+up=resize_split:up,10
keybind = ctrl+alt+down=resize_split:down,10

# Remove Ctrl+D for split cause nvim!?
keybind = ctrl+d=unbind

keybind = ctrl+a=select_all
keybind = ctrl+shift+d=scroll_page_up
keybind = ctrl+shift+u=scroll_page_down

keybind = ctrl+shift+f=toggle_split_zoom
keybind = ctrl+shift+z=toggle_window_decorations
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1

keybind = ctrl+shift+s=write_screen_file:paste
